@using InventoryApp.Models
@using InventoryApp.Services
@inject WorkplaceService WorkplaceService
@inject EmployeeService EmployeeService

<div class="modal-overlay" @onclick="OnClose">
    <div class="modal-content modal-lg" @onclick:stopPropagation="true">
        <div class="modal-header">
            <h2>Справочник рабочих мест</h2>
            <button class="btn-close" @onclick="OnClose">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>

        <div class="modal-body">
            @if (isEditing)
            {
                <div class="workplace-form">
                    <h3 class="form-section-title">@(isNewWorkplace ? "Новое рабочее место" : "Редактирование рабочего места")</h3>
                    
                    <div class="form-group">
                        <label class="form-label">Название *</label>
                        <input class="form-control" @bind="editingWorkplace!.Name" placeholder="РМ-101, Кабинет директора" />
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Здание</label>
                            <input class="form-control" @bind="editingWorkplace.Building" placeholder="Главный корпус" />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Этаж</label>
                            <input class="form-control" @bind="editingWorkplace.Floor" placeholder="2" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Кабинет/Комната</label>
                        <input class="form-control" @bind="editingWorkplace.Room" placeholder="205" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Ответственный сотрудник</label>
                        <div class="select-with-button">
                            <select class="form-control" @bind="editingWorkplace.EmployeeId">
                                <option value="">— Не назначен —</option>
                                @foreach (var emp in allEmployees)
                                {
                                    <option value="@emp.Id">@emp.FullName @(!string.IsNullOrEmpty(emp.Position) ? $"({emp.Position})" : "")</option>
                                }
                            </select>
                            <button type="button" class="btn btn-secondary btn-sm" @onclick="OpenEmployeeEditor" title="Редактировать справочник сотрудников">
                                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <line x1="23" y1="11" x2="17" y2="11"></line>
                                    <line x1="20" y1="8" x2="20" y2="14"></line>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Описание</label>
                        <textarea class="form-control" @bind="editingWorkplace.Description" rows="2" placeholder="Дополнительная информация..."></textarea>
                    </div>

                    <div class="form-actions">
                        <button class="btn btn-primary" @onclick="SaveWorkplace" disabled="@(string.IsNullOrWhiteSpace(editingWorkplace.Name))">
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            Сохранить
                        </button>
                        <button class="btn btn-secondary" @onclick="CancelEdit">
                            Отмена
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="toolbar">
                    <input class="form-control search-input" 
                           placeholder="Поиск рабочего места..." 
                           @bind="searchTerm" 
                           @bind:event="oninput"
                           @onkeyup="SearchWorkplaces" />
                    <button class="btn btn-primary" @onclick="AddNewWorkplace">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        Добавить
                    </button>
                </div>

                @if (isLoading)
                {
                    <div class="loading">Загрузка...</div>
                }
                else if (workplaces.Count == 0)
                {
                    <div class="empty-state">
                        <svg class="empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                        </svg>
                        <p>Рабочие места не найдены</p>
                        <button class="btn btn-primary btn-sm" @onclick="AddNewWorkplace">Добавить первое рабочее место</button>
                    </div>
                }
                else
                {
                    <div class="workplace-list">
                        @foreach (var workplace in workplaces)
                        {
                            <div class="workplace-item @(SelectMode && SelectedWorkplaceId == workplace.Id ? "selected" : "")"
                                 @onclick="() => SelectWorkplace(workplace)">
                                <div class="workplace-info">
                                    <div class="workplace-name">@workplace.Name</div>
                                    <div class="workplace-location">
                                        @{
                                            var locationParts = new List<string>();
                                            if (!string.IsNullOrEmpty(workplace.Building)) locationParts.Add(workplace.Building);
                                            if (!string.IsNullOrEmpty(workplace.Floor)) locationParts.Add($"Этаж {workplace.Floor}");
                                            if (!string.IsNullOrEmpty(workplace.Room)) locationParts.Add($"Каб. {workplace.Room}");
                                        }
                                        @if (locationParts.Any())
                                        {
                                            <span>@string.Join(", ", locationParts)</span>
                                        }
                                    </div>
                                    @if (workplace.Employee != null)
                                    {
                                        <div class="workplace-employee">
                                            <svg class="icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                                <circle cx="12" cy="7" r="4"></circle>
                                            </svg>
                                            @workplace.Employee.FullName
                                        </div>
                                    }
                                </div>
                                <div class="workplace-actions">
                                    @if (SelectMode)
                                    {
                                        <button class="btn btn-sm btn-success" @onclick:stopPropagation="true" @onclick="() => ConfirmSelection(workplace)">
                                            Выбрать
                                        </button>
                                    }
                                    <button class="btn-icon btn-edit" title="Редактировать" @onclick:stopPropagation="true" @onclick="() => EditWorkplace(workplace)">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                        </svg>
                                    </button>
                                    <button class="btn-icon btn-delete" title="Удалить" @onclick:stopPropagation="true" @onclick="() => DeleteWorkplace(workplace)">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="3 6 5 6 21 6"></polyline>
                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>

@if (showEmployeeEditor)
{
    <EmployeeEditorModal OnClose="CloseEmployeeEditor" SelectMode="false" />
}

@code {
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<Workplace> OnSelected { get; set; }
    [Parameter] public bool SelectMode { get; set; } = false;
    [Parameter] public Guid? SelectedWorkplaceId { get; set; }

    private List<Workplace> workplaces = new();
    private List<Employee> allEmployees = new();
    private string searchTerm = "";
    private bool isLoading = true;
    private bool isEditing = false;
    private Workplace? editingWorkplace;
    private bool showEmployeeEditor = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        workplaces = await WorkplaceService.GetAllAsync();
        allEmployees = await EmployeeService.GetAllAsync();
        isLoading = false;
    }

    private async Task SearchWorkplaces()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            workplaces = await WorkplaceService.GetAllAsync();
        }
        else
        {
            workplaces = await WorkplaceService.SearchAsync(searchTerm);
        }
    }

    private bool isNewWorkplace = false;

    private void AddNewWorkplace()
    {
        editingWorkplace = new Workplace { Id = Guid.Empty };
        isNewWorkplace = true;
        isEditing = true;
    }

    private void EditWorkplace(Workplace workplace)
    {
        editingWorkplace = new Workplace
        {
            Id = workplace.Id,
            Name = workplace.Name,
            Building = workplace.Building,
            Floor = workplace.Floor,
            Room = workplace.Room,
            Description = workplace.Description,
            EmployeeId = workplace.EmployeeId,
            IsActive = workplace.IsActive
        };
        isNewWorkplace = false;
        isEditing = true;
    }

    private async Task SaveWorkplace()
    {
        if (editingWorkplace == null || string.IsNullOrWhiteSpace(editingWorkplace.Name))
            return;

        if (isNewWorkplace)
        {
            await WorkplaceService.CreateAsync(editingWorkplace);
        }
        else
        {
            await WorkplaceService.UpdateAsync(editingWorkplace);
        }

        isEditing = false;
        editingWorkplace = null;
        await LoadData();
    }

    private void CancelEdit()
    {
        isEditing = false;
        isNewWorkplace = false;
        editingWorkplace = null;
    }

    private async Task DeleteWorkplace(Workplace workplace)
    {
        await WorkplaceService.DeleteAsync(workplace.Id);
        await LoadData();
    }

    private void SelectWorkplace(Workplace workplace)
    {
        if (SelectMode)
        {
            SelectedWorkplaceId = workplace.Id;
        }
    }

    private async Task ConfirmSelection(Workplace workplace)
    {
        await OnSelected.InvokeAsync(workplace);
    }

    private void OpenEmployeeEditor()
    {
        showEmployeeEditor = true;
    }

    private async Task CloseEmployeeEditor()
    {
        showEmployeeEditor = false;
        allEmployees = await EmployeeService.GetAllAsync();
    }
}

<style>
