@page "/"
@using InventoryApp.Models
@using InventoryApp.Services
@inject EquipmentService EquipmentService
@inject BarcodeService BarcodeService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Каталог оборудования</PageTitle>

<div class="page-header">
    <h2>Управление оборудованием</h2>
    <button class="btn btn-primary" @onclick="OpenAddForm">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Добавить оборудование
    </button>
</div>

@if (selectedIds.Any())
{
    <div class="bulk-actions-bar">
        <div class="bulk-actions-info">
            Выбрано объектов: @selectedIds.Count
        </div>
        <div class="bulk-actions-btns">
            <button class="btn btn-white" @onclick="OpenBulkEdit">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 1rem; height: 1rem;">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
                Массовое редактирование
            </button>
            <button class="btn btn-outline-white" @onclick="DeleteBulk">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 1rem; height: 1rem;">
                    <polyline points="3 6 5 6 21 6"></polyline>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                </svg>
                Удалить выбранные
            </button>
            <button class="btn btn-link" style="color: white; opacity: 0.8;" @onclick="() => selectedIds.Clear()">
                Отмена
            </button>
        </div>
    </div>
}

<div class="card">
    <div class="filters">
        <input type="text" 
               class="form-control search-input" 
               placeholder="Поиск по названию, инв. номеру, месту, сотруднику..." 
               @bind="searchTerm" 
               @bind:event="oninput"
               @onkeyup="OnSearchKeyUp" />
        <select class="form-control type-filter" @bind="typeFilter" @bind:after="LoadEquipment">
            <option value="all">Все типы</option>
            @foreach (var type in EquipmentTypes.All)
            {
                <option value="@type.Key">@type.Value</option>
            }
        </select>
        <label class="toggle-label">
            <span class="toggle-switch">
                <input type="checkbox" @bind="showDisposed" @bind:after="StateHasChanged" />
                <span class="toggle-slider"></span>
            </span>
            <span class="toggle-text">Показать списанные</span>
        </label>
    </div>

    @if (isLoading)
    {
        <div class="loading">Загрузка...</div>
    }
    else
    {
        <div class="table-container">
            <table class="data-table sortable-table">
                <thead>
                    <tr>
                        <th class="checkbox-col">
                            <input type="checkbox" checked="@IsAllSelected()" @onchange="e => ToggleAll((bool)(e.Value ?? false))" />
                        </th>
                        <th class="sortable @GetSortClass("Name")" @onclick='() => SortBy("Name")'>
                            Название
                            @RenderSortIcon("Name")
                        </th>
                        <th class="sortable @GetSortClass("Type")" @onclick='() => SortBy("Type")'>
                            Тип
                            @RenderSortIcon("Type")
                        </th>
                        <th class="sortable @GetSortClass("Barcode")" @onclick='() => SortBy("Barcode")'>
                            Инв. номер
                            @RenderSortIcon("Barcode")
                        </th>
                        <th class="sortable @GetSortClass("PurchaseDate")" @onclick='() => SortBy("PurchaseDate")'>
                            Дата добавления
                            @RenderSortIcon("PurchaseDate")
                        </th>
                        <th class="sortable @GetSortClass("Workplace")" @onclick='() => SortBy("Workplace")'>
                            Рабочее место
                            @RenderSortIcon("Workplace")
                        </th>
                        <th class="sortable @GetSortClass("Employee")" @onclick='() => SortBy("Employee")'>
                            Сотрудник
                            @RenderSortIcon("Employee")
                        </th>
                        <th>Примечания</th>
                        <th class="sortable @GetSortClass("Status")" @onclick='() => SortBy("Status")'>
                            Статус
                            @RenderSortIcon("Status")
                        </th>
                        <th class="actions-col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!equipment.Any())
                    {
                        <tr>
                            <td colspan="10" class="empty-message">Оборудование не найдено</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in GetSortedEquipment())
                        {
                            <tr class="@(selectedIds.Contains(item.Id) ? "selected" : "")">
                                <td class="checkbox-col">
                                    <input type="checkbox" checked="@selectedIds.Contains(item.Id)" @onchange="() => ToggleItem(item.Id)" />
                                </td>
                                <td>@item.Name</td>
                                <td>@GetTypeName(item.Type)</td>
                                <td class="barcode">@item.Barcode</td>
                                <td class="date-cell">@(item.PurchaseDate?.ToString("dd.MM.yyyy") ?? "—")</td>
                                <td>@(item.Workplace?.Name ?? "—")</td>
                                <td>@(item.Employee?.FullName ?? "—")</td>
                                <td class="notes-cell" title="@item.Notes">@item.Notes</td>
                                <td>
                                    <span class="status-badge status-@item.Status">
                                        @GetStatusName(item.Status)
                                    </span>
                                </td>
                                <td class="actions-col">
                                    <div class="actions">
                                        <button class="btn-icon btn-split" title="Разделить (создать копию для другого места)" @onclick="() => SplitEquipment(item)">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M16 3h5v5"></path>
                                                <path d="M8 3H3v5"></path>
                                                <path d="M12 22v-8.3a4 4 0 0 0-1.172-2.872L3 3"></path>
                                                <path d="m15 9 6-6"></path>
                                            </svg>
                                        </button>
                                        <button class="btn-icon btn-print" title="Печать инв. номера" @onclick="() => PrintBarcode(item)">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="6 9 6 2 18 2 18 9"></polyline>
                                                <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                                                <rect x="6" y="14" width="12" height="8"></rect>
                                            </svg>
                                        </button>
                                        <button class="btn-icon btn-edit" title="Редактировать" @onclick="() => OpenEditForm(item)">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                            </svg>
                                        </button>
                                        <button class="btn-icon btn-delete" title="Удалить" @onclick="() => DeleteEquipment(item)">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                            </svg>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (showForm)
{
    <EquipmentFormModal Equipment="editingEquipment" 
                        OnClose="CloseForm" 
                        OnSaved="OnEquipmentSaved" />
}

@if (showDeleteConfirm && equipmentToDelete != null)
{
    <ConfirmModal 
        Title="Удаление оборудования"
        Message="@($"Вы уверены, что хотите удалить \"{equipmentToDelete.Name}\"? Это действие нельзя отменить.")"
        ConfirmText="Удалить"
        CancelText="Отмена"
        Variant="ConfirmModal.ConfirmVariant.Danger"
        OnConfirm="ConfirmDelete"
        OnCancel="CancelDelete" />
}

@if (showSplitConfirm && equipmentToSplit != null)
{
    <ConfirmModal 
        Title="Разделение оборудования"
        Message="@($"Создать копию \"{equipmentToSplit.Name}\" с тем же инвентарным номером? Это позволит разнести части оборудования по разным местам.")"
        ConfirmText="Создать копию"
        CancelText="Отмена"
        Variant="ConfirmModal.ConfirmVariant.Warning"
        OnConfirm="ConfirmSplit"
        OnCancel="CancelSplit" />
}

@if (showBulkEdit)
{
    <BulkEditModal 
        SelectedIds="selectedIds.ToList()" 
        SelectedCount="selectedIds.Count"
        OnClose="() => showBulkEdit = false"
        OnSaved="OnBulkSaved" />
}

@if (showBulkDeleteConfirm)
{
    <ConfirmModal 
        Title="Массовое удаление"
        Message="@($"Вы уверены, что хотите удалить {selectedIds.Count} объектов? Это действие нельзя отменить.")"
        ConfirmText="Удалить выбранные"
        CancelText="Отмена"
        Variant="ConfirmModal.ConfirmVariant.Danger"
        OnConfirm="ConfirmBulkDelete"
        OnCancel="CancelBulkDelete" />
}

@implements IDisposable

@code {
    private List<Equipment> equipment = new();
    private bool isLoading = true;
    private string searchTerm = "";
    private string typeFilter = "all";
    private bool showForm = false;
    private Equipment? editingEquipment = null;
    private System.Timers.Timer? searchTimer;
    private bool showDisposed = false;
    
    // Sorting state
    private string sortColumn = "Name";
    private bool sortAscending = true;
    
    // Confirm modals state
    private bool showDeleteConfirm = false;
    private Equipment? equipmentToDelete = null;
    private bool showSplitConfirm = false;
    private Equipment? equipmentToSplit = null;
    
    // Bulk operations state
    private HashSet<Guid> selectedIds = new();
    private bool showBulkEdit = false;
    private bool showBulkDeleteConfirm = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadEquipment();
    }

    private async Task LoadEquipment()
    {
        isLoading = true;
        equipment = await EquipmentService.SearchAsync(searchTerm, typeFilter);
        isLoading = false;
    }

    private void OnSearchKeyUp()
    {
        searchTimer?.Stop();
        searchTimer?.Dispose();
        searchTimer = new System.Timers.Timer(300);
        searchTimer.Elapsed += async (sender, e) =>
        {
            searchTimer?.Stop();
            await InvokeAsync(async () =>
            {
                await LoadEquipment();
                StateHasChanged();
            });
        };
        searchTimer.Start();
    }

    private void OpenAddForm()
    {
        editingEquipment = null;
        showForm = true;
    }

    private void OpenEditForm(Equipment item)
    {
        editingEquipment = item;
        showForm = true;
    }

    private void CloseForm()
    {
        showForm = false;
        editingEquipment = null;
    }

    private async Task OnEquipmentSaved()
    {
        showForm = false;
        editingEquipment = null;
        selectedIds.Clear();
        await LoadEquipment();
    }

    private void ToggleItem(Guid id)
    {
        if (selectedIds.Contains(id))
            selectedIds.Remove(id);
        else
            selectedIds.Add(id);
    }

    private void ToggleAll(bool checkedValue)
    {
        if (checkedValue)
        {
            var visibleItems = GetSortedEquipment();
            foreach (var item in visibleItems)
                selectedIds.Add(item.Id);
        }
        else
        {
            selectedIds.Clear();
        }
    }

    private bool IsAllSelected()
    {
        var visibleItems = GetSortedEquipment().ToList();
        return visibleItems.Any() && visibleItems.All(i => selectedIds.Contains(i.Id));
    }

    private void OpenBulkEdit()
    {
        showBulkEdit = true;
    }

    private async Task OnBulkSaved()
    {
        showBulkEdit = false;
        selectedIds.Clear();
        await LoadEquipment();
    }

    private void DeleteBulk()
    {
        showBulkDeleteConfirm = true;
    }

    private async Task ConfirmBulkDelete()
    {
        await EquipmentService.DeleteBulkAsync(selectedIds.ToList());
        showBulkDeleteConfirm = false;
        selectedIds.Clear();
        await LoadEquipment();
    }

    private void CancelBulkDelete()
    {
        showBulkDeleteConfirm = false;
    }

    private void DeleteEquipment(Equipment item)
    {
        equipmentToDelete = item;
        showDeleteConfirm = true;
    }

    private async Task ConfirmDelete()
    {
        if (equipmentToDelete != null)
        {
            await EquipmentService.DeleteAsync(equipmentToDelete.Id);
            await LoadEquipment();
        }
        CancelDelete();
    }

    private void CancelDelete()
    {
        showDeleteConfirm = false;
        equipmentToDelete = null;
    }

    private void SplitEquipment(Equipment item)
    {
        equipmentToSplit = item;
        showSplitConfirm = true;
    }

    private async Task ConfirmSplit()
    {
        if (equipmentToSplit != null)
        {
            var duplicate = await EquipmentService.DuplicateAsync(equipmentToSplit.Id);
            await LoadEquipment();
            CancelSplit();
            // Открываем форму редактирования для созданной копии (перезагружаем с navigation properties)
            var freshDuplicate = await EquipmentService.GetByIdAsync(duplicate.Id);
            if (freshDuplicate != null)
            {
                OpenEditForm(freshDuplicate);
            }
        }
    }

    private void CancelSplit()
    {
        showSplitConfirm = false;
        equipmentToSplit = null;
    }

    private async Task PrintBarcode(Equipment item)
    {
        var location = item.Workplace?.Name ?? "";
        var assignedTo = item.Employee?.FullName ?? "";
        
        var html = BarcodeService.GenerateBarcodeHtml(
            item.Barcode, 
            item.Name, 
            GetTypeName(item.Type), 
            location, 
            assignedTo);
        
        await JSRuntime.InvokeVoidAsync("printBarcode", html);
    }

    private string GetTypeName(string type) => EquipmentTypes.All.GetValueOrDefault(type, type);
    private string GetStatusName(string status) => EquipmentStatuses.All.GetValueOrDefault(status, status);

    // Sorting methods
    private void SortBy(string column)
    {
        if (sortColumn == column)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            sortColumn = column;
            sortAscending = true;
        }
    }

    private string GetSortClass(string column)
    {
        if (sortColumn != column) return "";
        return sortAscending ? "sort-asc" : "sort-desc";
    }

    private IEnumerable<Equipment> GetSortedEquipment()
    {
        var query = equipment.AsEnumerable();
        
        // По умолчанию показываем только активное оборудование
        // При включении тоггла показываем все (включая списанные)
        if (!showDisposed)
        {
            query = query.Where(e => e.Status == "active");
        }
        
        query = sortColumn switch
        {
            "Name" => sortAscending ? query.OrderBy(e => e.Name) : query.OrderByDescending(e => e.Name),
            "Type" => sortAscending ? query.OrderBy(e => GetTypeName(e.Type)) : query.OrderByDescending(e => GetTypeName(e.Type)),
            "Barcode" => sortAscending ? query.OrderBy(e => e.Barcode) : query.OrderByDescending(e => e.Barcode),
            "PurchaseDate" => sortAscending ? query.OrderBy(e => e.PurchaseDate) : query.OrderByDescending(e => e.PurchaseDate),
            "Workplace" => sortAscending ? query.OrderBy(e => e.Workplace?.Name ?? "") : query.OrderByDescending(e => e.Workplace?.Name ?? ""),
            "Employee" => sortAscending ? query.OrderBy(e => e.Employee?.FullName ?? "") : query.OrderByDescending(e => e.Employee?.FullName ?? ""),
            "Status" => sortAscending ? query.OrderBy(e => GetStatusName(e.Status)) : query.OrderByDescending(e => GetStatusName(e.Status)),
            _ => query
        };
        
        return query;
    }

    private RenderFragment RenderSortIcon(string column) => builder =>
    {
        if (sortColumn != column) return;
        
        builder.OpenElement(0, "svg");
        builder.AddAttribute(1, "class", "sort-icon");
        builder.AddAttribute(2, "viewBox", "0 0 24 24");
        builder.AddAttribute(3, "fill", "none");
        builder.AddAttribute(4, "stroke", "currentColor");
        builder.AddAttribute(5, "stroke-width", "2");
        
        if (sortAscending)
        {
            builder.OpenElement(6, "polyline");
            builder.AddAttribute(7, "points", "18 15 12 9 6 15");
            builder.CloseElement();
        }
        else
        {
            builder.OpenElement(6, "polyline");
            builder.AddAttribute(7, "points", "6 9 12 15 18 9");
            builder.CloseElement();
        }
        
        builder.CloseElement();
    };

    public void Dispose()
    {
        searchTimer?.Stop();
        searchTimer?.Dispose();
    }
}
